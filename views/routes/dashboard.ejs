      <section>
        <% for (let post of allposts) { %>
        <div class="cardsingle">
          
        <span><%= post.id %>  <a href="/post/<%= post.slug %>"><%= post.title %></a> </span> <a href="#">DELETE</a> | 
      
        <div>
          <span><%= post.published ? 'published✅' : 'private❌' %></span> |
          <a href="/dashboard/edit/<%= post.slug %>">Edit</a> |
        </div>
       
        
        </div>
        <% } %>
      </section>

      <button @click="click">click</button>

     
    </div>
  </body>
